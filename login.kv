Screen:

    MDCard:
        size_hint: None, None
        size: 300, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25

        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: "Welcome"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]

        MDTextField:
            id: user
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        # Горизонтальный контейнер для кнопок
        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            size_hint_y: None
            height: 50
            pos_hint: {"center_x": 0.5}

            MDRoundFlatButton:
                text: "Вход"
                font_size: 12
                on_press: app.logger()

            MDRoundFlatButton:
                text: "Регистрация"
                font_size: 12
                on_press: app.register()  # Обработчик нажатия кнопки Регистрация

        Widget:
            size_hint_y: None
            height: 10
